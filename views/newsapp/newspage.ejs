<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/app.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/3808de5cb1.js" crossorigin="anonymous"></script>

  <title>News & Mood Tracking</title>

  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      background-color: #f7f9fc;
      color: #333;
    }

    .header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 15px 20px;
      background: #4A47A3;
      color: white;
      box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.1);
    }

    .header h3 {
      margin: 0;
      font-weight: 600;
    }

    .header a {
      color: white;
      text-decoration: none;
    }

    .container {
      max-width: 600px;
      margin: 40px auto;
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    h3 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 15px;
    }

    p {
      font-weight: 500;
      margin: 8px 0;
    }

    label {
      display: flex;
      align-items: center;
      padding: 8px 12px;
      margin: 5px 0;
      background: #f2f2f2;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.2s;
    }

    label:hover {
      background: #e0e0e0;
    }

    input[type="radio"] {
      margin-right: 10px;
    }

    .submit-btn {
      display: block;
      width: 100%;
      padding: 12px;
      margin-top: 15px;
      background: #4A47A3;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
    }

    .submit-btn:hover {
      background: #3A369D;
    }

    #moodAnalysis {
      display: none;
      background: #E8F5E9;
      padding: 15px;
      border-radius: 8px;
      text-align: center;
      font-size: 16px;
      font-weight: 500;
      margin-top: 15px;
      transition: 0.3s ease-in-out;
    }

    #moodAnalysis.show {
      display: block;
      animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body>

  <div class="header">
    <a href="/home">
      <img src="/img/back.png" alt="" height="40px">
    </a>
    <h3>News & Mood Tracker</h3>
    <a href="news/configure" class="settings">
      <i class="fas fa-cog fa-2x"></i>
    </a>
  </div>

  <div class="container">
    <h3>Mood Check-in</h3>

    <form id="moodForm">
      <p>How are you feeling today?</p>
      <label><input type="radio" name="mood" value="happy"> üòä Happy</label>
      <label><input type="radio" name="mood" value="neutral"> üòê Neutral</label>
      <label><input type="radio" name="mood" value="sad"> üòû Sad</label>

      <p>How well did you sleep last night?</p>
      <label><input type="radio" name="sleep" value="good"> üí§ Good</label>
      <label><input type="radio" name="sleep" value="okay"> üò¥ Okay</label>
      <label><input type="radio" name="sleep" value="poor"> üòµ Poor</label>

      <p>Do you feel socially engaged today?</p>
      <label><input type="radio" name="social" value="yes"> üë• Yes</label>
      <label><input type="radio" name="social" value="no"> üôÖ No</label>

      <button type="submit" class="submit-btn">Submit</button>
    </form>

    <div id="moodAnalysis">
      <h4>AI Analysis</h4>
      <p id="analysisText"></p>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="js/news.js"></script>
  <script>
    $(document).ready(function () {
      $("#moodForm").on("submit", function(event) {
        event.preventDefault();

        let mood = $("input[name='mood']:checked").val();
        let sleep = $("input[name='sleep']:checked").val();
        let social = $("input[name='social']:checked").val();

        if (!mood || !sleep || !social) {
          $("#analysisText").text("‚ö†Ô∏è Please answer all questions before submitting.");
          $("#moodAnalysis").addClass("show");
          return;
        }

        $.ajax({
          type: "POST",
          url: "/analyze-mood",
          data: JSON.stringify({ mood, sleep, social }),
          contentType: "application/json",
          success: function(response) {
            if (response.success) {
              $("#analysisText").text(response.analysis);
            } else {
              $("#analysisText").text("‚ö†Ô∏è AI analysis could not be generated. Please try again later.");
            }
            $("#moodAnalysis").addClass("show");
          },
          error: function() {
            $("#analysisText").text("‚ö†Ô∏è Unable to connect to AI service. Check your internet connection.");
            $("#moodAnalysis").addClass("show");
          }
        });
      });
    });
  </script>

</body>
</html>
